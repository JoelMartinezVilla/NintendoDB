<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<HBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ItemCellController" spacing="10">
    <children>
        <ImageView fx:id="imageView" fitHeight="50" fitWidth="50"/>
        <VBox>
            <children>
                <Label fx:id="nameLabel" style="-fx-font-weight: bold;"/>
                <Label fx:id="descriptionLabel" wrapText="true"/>
            </children>
        </VBox>
    </children>
</HBox>
